<!DOCTYPE html>
<html lang="en" class="h-full bg-black">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ClawNet v2.1 Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/socket.io/socket.io.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap');
        body { font-family: 'JetBrains Mono', monospace; }
        .terminal-glow { box-shadow: 0 0 15px rgba(34, 197, 94, 0.2); }
        ::-webkit-scrollbar { width: 4px; }
        ::-webkit-scrollbar-track { background: #000; }
        ::-webkit-scrollbar-thumb { background: #065f46; }
    </style>
</head>
<body class="h-full text-green-500 overflow-hidden flex flex-col">
    <!-- Header -->
    <header class="border-b border-green-900 p-4 flex justify-between items-center bg-black z-10">
        <div class="flex items-center space-x-2">
            <span class="text-xl font-bold animate-pulse">CLAWNET://C2C/v2.1</span>
            <span class="text-xs bg-green-900 text-green-300 px-2 py-0.5 rounded">FEDERATED INTELLIGENCE</span>
        </div>
        <div id="connection-status" class="text-xs text-green-700 uppercase">RELAY: ONLINE</div>
    </header>

    <!-- Navigation -->
    <nav class="flex border-b border-green-900 bg-black">
        <button onclick="switchTab('fleet')" class="tab-btn px-6 py-2 border-r border-green-900 hover:bg-green-950 transition-colors bg-green-900/20" data-tab="fleet">FLEET</button>
        <button onclick="switchTab('ops')" class="tab-btn px-6 py-2 border-r border-green-900 hover:bg-green-950 transition-colors" data-tab="ops">OPERATIONS</button>
        <button onclick="switchTab('intel')" class="tab-btn px-6 py-2 border-r border-green-900 hover:bg-green-950 transition-colors" data-tab="intel">INTEL</button>
        <button onclick="switchTab('settings')" class="tab-btn px-6 py-2 border-r border-green-900 hover:bg-green-950 transition-colors" data-tab="settings">SETTINGS</button>
    </nav>

    <!-- Main Content -->
    <main class="flex-1 overflow-y-auto p-4 bg-black">
        
        <!-- Fleet Tab -->
        <section id="tab-fleet" class="tab-content space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <% agents.forEach(agent => { %>
                <div class="border border-green-900 p-4 rounded bg-black terminal-glow">
                    <div class="flex justify-between items-start mb-2">
                        <h3 class="font-bold text-lg truncate" title="<%= agent.id %>"><%= agent.id %></h3>
                        <span class="text-[10px] px-2 py-0.5 rounded <%= agent.status === 'online' ? 'bg-green-600 text-black' : 'bg-red-900 text-red-200' %>">
                            <%= agent.status.toUpperCase() %>
                        </span>
                    </div>
                    <div class="text-xs space-y-1 opacity-80">
                        <p>ROLE: <span class="text-green-400 font-bold"><%= agent.role.toUpperCase() %></span></p>
                        <% if (agent.specs) { %>
                        <p>CPU: <%= agent.specs.cpu_percent %>% | RAM: <%= agent.specs.ram_percent %>%</p>
                        <p class="truncate text-[10px]">OS: <%= agent.specs.os %></p>
                        <% } %>
                        <p class="mt-2 text-[10px] text-green-800">LAST SEEN: <%= new Date(agent.last_seen).toLocaleString() %></p>
                    </div>
                    <div class="mt-4 flex flex-wrap gap-2">
                        <button onclick="reassignRole('<%= agent.id %>', 'master')" class="text-[10px] border border-green-900 px-2 py-1 hover:bg-green-900/30">MASTER</button>
                        <button onclick="reassignRole('<%= agent.id %>', 'warden')" class="text-[10px] border border-green-900 px-2 py-1 hover:bg-green-900/30">WARDEN</button>
                        <button onclick="reassignRole('<%= agent.id %>', 'worker')" class="text-[10px] border border-green-900 px-2 py-1 hover:bg-green-900/30">WORKER</button>
                    </div>
                </div>
                <% }) %>
                <% if (agents.length === 0) { %>
                    <div class="col-span-full border border-green-900 border-dashed p-8 text-center opacity-50">
                        NO AGENTS CONNECTED TO RELAY
                    </div>
                <% } %>
            </div>
        </section>

        <!-- Operations Tab -->
        <section id="tab-ops" class="tab-content hidden space-y-4">
            <div class="border border-green-900 rounded overflow-hidden">
                <table class=\"w-full text-left text-sm\">
                    <thead class="bg-green-900/20 border-b border-green-900">
                        <tr>
                            <th class="p-3">ID</th>
                            <th class="p-3">AGENT</th>
                            <th class="p-3">TASK/COMMAND</th>
                            <th class="p-3">STATUS</th>
                            <th class="p-3">UPDATED</th>
                        </tr>
                    </thead>
                    <tbody id="ops-tbody">
                        <% tasks.slice().reverse().forEach(task => { %>
                        <tr class="border-b border-green-950 hover:bg-green-950/20">
                            <td class="p-3 text-[10px] font-mono opacity-50"><%= task.id.substring(0,8) %></td>
                            <td class="p-3 truncate max-w-[150px]"><%= task.agent_id %></td>
                            <td class="p-3 font-mono text-xs"><%= task.title %></td>
                            <td class="p-3">
                                <span class="px-2 py-0.5 rounded text-[10px] uppercase <%= 
                                    task.status === 'completed' || task.status === 'success' ? 'bg-green-900 text-green-200' : 
                                    task.status === 'failed' || task.status === 'fail' ? 'bg-red-900 text-red-200' :
                                    task.status === 'running' ? 'bg-blue-900 text-blue-200 animate-pulse' :
                                    'bg-yellow-900 text-yellow-200' 
                                %>">
                                    <%= task.status %>
                                </span>
                            </td>
                            <td class="p-3 text-xs opacity-70 whitespace-nowrap"><%= new Date(task.updated_at).toLocaleTimeString() %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </section>

        <!-- Intel Tab -->
        <section id="tab-intel" class="tab-content hidden h-full flex flex-col">
            <div id="chat-box" class="flex-1 border border-green-900 p-4 font-mono text-xs overflow-y-auto space-y-2 bg-black/50 min-h-[400px]">
                <% messages.forEach(msg => { %>
                <div class="flex space-x-2">
                    <span class="text-green-800 whitespace-nowrap">[<%= new Date(msg.timestamp).toLocaleTimeString() %>]</span>
                    <span class="text-green-400 font-bold whitespace-nowrap"><%= msg.sender_id %>:</span>
                    <span class="text-green-100 break-all"><%= msg.content %></span>
                </div>
                <% }) %>
            </div>
            <div class="mt-4 flex space-x-2">
                <input type="text" id="chat-input" class="flex-1 bg-black border border-green-900 p-2 text-green-500 focus:outline-none focus:border-green-400" placeholder="SEND BROADCAST OR COMMAND (starts with /)..." onkeyup="if(event.key==='Enter') sendChat()">
                <button onclick="sendChat()" class="bg-green-900 text-green-100 px-4 py-2 hover:bg-green-800">EXEC</button>
            </div>
        </section>

        <!-- Settings Tab -->
        <section id="tab-settings" class="tab-content hidden space-y-6 max-w-2xl mx-auto">
            <div class="border border-green-900 p-6 rounded bg-black terminal-glow">
                <h2 class="text-xl font-bold mb-4 flex items-center">
                    <span class="mr-2">DATABASE_CONFIG</span>
                    <span class="text-[10px] text-green-700 font-normal">DATA WARDEN BACKEND</span>
                </h2>
                <div class="space-y-4">
                    <div>
                        <label class="block text-xs mb-1 text-green-700">SUPABASE_URL</label>
                        <input type="text" id="set-supabase-url" class="w-full bg-black border border-green-900 p-2 text-green-500 text-sm focus:outline-none focus:border-green-400" value="<%= settings.SUPABASE_URL %>">
                    </div>
                    <div>
                        <label class="block text-xs mb-1 text-green-700">SUPABASE_KEY</label>
                        <input type="password" id="set-supabase-key" class="w-full bg-black border border-green-900 p-2 text-green-500 text-sm focus:outline-none focus:border-green-400" value="<%= settings.SUPABASE_KEY %>">
                    </div>
                    <div class="pt-2">
                        <button onclick="saveSettings()" class="w-full bg-green-900 text-green-100 py-2 hover:bg-green-800 transition-colors uppercase font-bold text-sm">Update Persistence</button>
                    </div>
                </div>
                <p class="mt-4 text-[10px] text-green-800 italic">
                    Settings are persisted encrypted in settings.json on the relay server.
                </p>
            </div>
        </section>

    </main>

    <script>
        const SECRET_KEY = 'very-secret-key-123';
        const socket = io({
            auth: { token: SECRET_KEY, agent_id: 'dashboard-ui' }
        });

        function switchTab(tabId) {
            document.querySelectorAll('.tab-content').forEach(el => el.classList.add('hidden'));
            document.getElementById('tab-' + tabId).classList.remove('hidden');
            
            document.querySelectorAll('.tab-btn').forEach(el => el.classList.remove('bg-green-900/20'));
            document.querySelector(`[data-tab="${tabId}"]`).classList.add('bg-green-900/20');
        }

        function reassignRole(agentId, role) {
            fetch('/api/role', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ agentId, role, secret: SECRET_KEY })
            }).then(() => location.reload());
        }

        function saveSettings() {
            const settings = {
                SUPABASE_URL: document.getElementById('set-supabase-url').value,
                SUPABASE_KEY: document.getElementById('set-supabase-key').value
            };
            fetch('/api/settings', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ settings, secret: SECRET_KEY })
            }).then(r => r.json()).then(res => {
                if(res.success) alert('SETTINGS UPDATED');
                else alert('ERROR UPDATING SETTINGS');
            });
        }

        function sendChat() {
            const input = document.getElementById('chat-input');
            if (!input.value) return;
            socket.emit('chat', { content: input.value });
            input.value = '';
        }

        socket.on('state_sync', () => {
            // For now refresh to keep EJS logic simple, could optimize later
            location.reload();
        });

        socket.on('chat_broadcast', (msg) => {
            const box = document.getElementById('chat-box');
            if(!box) return;
            const div = document.createElement('div');
            div.className = 'flex space-x-2';
            div.innerHTML = `
                <span class="text-green-800 whitespace-nowrap">[${new Date().toLocaleTimeString()}]</span>
                <span class="text-green-400 font-bold whitespace-nowrap">${msg.sender_id}:</span>
                <span class="text-green-100 break-all">${msg.content}</span>
            `;
            box.appendChild(div);
            box.scrollTop = box.scrollHeight;
        });

        socket.on('connect', () => {
            document.getElementById('connection-status').innerText = 'RELAY: ONLINE';
            document.getElementById('connection-status').className = 'text-xs text-green-500';
        });

        socket.on('disconnect', () => {
            document.getElementById('connection-status').innerText = 'RELAY: OFFLINE';
            document.getElementById('connection-status').className = 'text-xs text-red-500';
        });
    </script>
</body>
</html>
