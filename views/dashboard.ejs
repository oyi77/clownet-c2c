<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ClawNet C2C Headquarters</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500&display=swap');
        body { font-family: 'Fira Code', monospace; }
        .terminal-glow { box-shadow: 0 0 15px rgba(34, 197, 94, 0.2); }
    </style>
</head>
<body class="bg-zinc-950 text-zinc-300 min-h-screen p-4 md:p-8">
    <header class="max-w-6xl mx-auto mb-8 flex justify-between items-center border-b border-zinc-800 pb-4">
        <h1 class="text-2xl font-bold text-green-500 tracking-tighter">ðŸ¦ž CLAWNET_C2C <span class="text-xs text-zinc-500 font-normal">v1.0.0</span></h1>
        <div class="flex items-center gap-2">
            <span class="w-2 h-2 bg-green-500 animate-pulse rounded-full"></span>
            <span class="text-xs uppercase text-zinc-500">Relay Online</span>
        </div>
    </header>

    <main class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- AGENT LIST -->
        <div class="lg:col-span-2 space-y-6">
            <h2 class="text-lg font-semibold text-zinc-100 flex items-center gap-2">
                ðŸ“¡ CONNECTED_AGENTS
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <% if (agents.length === 0) { %>
                    <div class="col-span-2 border border-dashed border-zinc-800 p-8 text-center text-zinc-600 rounded-lg">
                        NO_AGENTS_DETECTED_IN_ORBIT
                    </div>
                <% } %>
                <% agents.forEach(agent => { %>
                    <div class="bg-zinc-900 border border-zinc-800 p-5 rounded-lg terminal-glow">
                        <div class="flex justify-between items-start mb-4">
                            <div>
                                <h3 class="text-green-400 font-bold"><%= agent.id %></h3>
                                <span class="text-[10px] uppercase bg-zinc-800 px-2 py-0.5 rounded text-zinc-400"><%= agent.role %></span>
                            </div>
                            <span class="text-xs <%= agent.status === 'online' ? 'text-green-500' : 'text-red-500' %>">
                                <%= agent.status.toUpperCase() %>
                            </span>
                        </div>
                        <div class="space-y-3">
                            <div class="text-[11px]">
                                <span class="text-zinc-500">LAST_SEEN:</span>
                                <span class="text-zinc-400"><%= new Date(agent.last_heartbeat).toLocaleTimeString() %></span>
                            </div>
                            <div>
                                <span class="text-[11px] text-zinc-500 block mb-1">CRON_SNAPSHOT:</span>
                                <pre class="text-[10px] bg-black p-3 rounded border border-zinc-800 overflow-x-auto text-zinc-400"><%= typeof agent.cron_snapshot === 'string' ? agent.cron_snapshot : JSON.stringify(agent.cron_snapshot, null, 2) %></pre>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>

        <!-- LOGS / DISKUSI -->
        <div class="space-y-6">
            <h2 class="text-lg font-semibold text-zinc-100 flex items-center gap-2">
                ðŸ’¬ NETWORK_TRAFFIC
            </h2>
            <div class="bg-zinc-900 border border-zinc-800 rounded-lg h-[600px] flex flex-col">
                <div id="logs" class="flex-1 overflow-y-auto p-4 space-y-3 font-mono text-xs">
                    <div class="text-zinc-600">-- INITIALIZING ENCRYPTED STREAM --</div>
                    <!-- Pesan bakal masuk sini via Socket.io -->
                </div>
                <div class="p-3 border-t border-zinc-800 bg-zinc-950 rounded-b-lg">
                    <input type="text" id="cmd-input" placeholder="Broadcast to all agents..." 
                           class="w-full bg-zinc-900 border border-zinc-700 rounded px-3 py-2 text-xs focus:outline-none focus:border-green-500 text-zinc-300">
                </div>
            </div>
        </div>
    </main>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io({ auth: { token: 'very-secret-key-123', agent_id: 'master-ui' } });
        const logs = document.getElementById('logs');
        const input = document.getElementById('cmd-input');

        socket.on('agent_update', () => {
            setTimeout(() => location.reload(), 1000);
        });

        socket.on('direct_message', (data) => {
            const entry = document.createElement('div');
            entry.innerHTML = `<span class="text-blue-500">[${new Date().toLocaleTimeString()}]</span> <span class="text-green-400">${data.from}</span>: ${data.msg}`;
            logs.appendChild(entry);
            logs.scrollTop = logs.scrollHeight;
        });

        input.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                socket.emit('message', { to: 'all', msg: input.value });
                const entry = document.createElement('div');
                entry.innerHTML = `<span class="text-zinc-600">[${new Date().toLocaleTimeString()}]</span> <span class="text-zinc-400">YOU (Broadcast)</span>: ${input.value}`;
                logs.appendChild(entry);
                input.value = '';
            }
        });
    </script>
</body>
</html>
