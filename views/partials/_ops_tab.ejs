<!-- OPERATIONS TAB -->
<section id="ops" class="tab-content p-6 min-h-0 overflow-y-auto hidden">
  <div class="max-w-6xl mx-auto space-y-8">
    <!-- Command Dispatcher -->
    <div class="bg-zinc-900/50 border border-zinc-800 p-6 rounded-lg terminal-glow">
      <h2 class="text-zinc-100 font-bold text-sm uppercase tracking-widest mb-6 flex items-center gap-2">
        <span class="text-green-500">âš¡</span> COMMAND_DISPATCH
      </h2>
      <div class="flex flex-col md:flex-row gap-4">
        <div class="w-full md:w-48">
          <label class="text-[9px] text-zinc-600 uppercase font-bold mb-1.5 block tracking-wider">Target Agent</label>
          <select id="ops-target" class="w-full bg-black border border-zinc-800 rounded p-2.5 text-xs text-zinc-300 outline-none focus:border-green-600">
            <option value="all">Broadcast (all)</option>
          </select>
        </div>
        <div class="flex-1">
          <label class="text-[9px] text-zinc-600 uppercase font-bold mb-1.5 block tracking-wider">Command / Instruction</label>
          <input type="text" id="ops-command" placeholder="/exec <command> or instruction..."
            class="w-full bg-black border border-zinc-800 rounded p-2.5 text-xs text-zinc-100 outline-none focus:border-green-600 font-mono">
        </div>
        <div class="md:pt-5">
          <button id="ops-dispatch" class="w-full md:w-auto bg-green-600 hover:bg-green-500 text-black font-bold py-2.5 px-6 rounded text-[10px] uppercase tracking-widest transition-all">
            DISPATCH
          </button>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Templates -->
      <div class="lg:col-span-1 space-y-4">
        <div class="flex justify-between items-center">
          <h3 class="text-zinc-500 font-bold text-[10px] uppercase tracking-widest">TEMPLATES</h3>
          <button id="add-template-btn" class="text-green-500 text-xs hover:text-green-400">+ NEW</button>
        </div>
        <div id="templates-grid" class="space-y-3">
          <!-- Populated by JS -->
          <div class="text-center py-4 text-zinc-700 text-[10px] italic border border-dashed border-zinc-800 rounded">NO_TEMPLATES_DEFINED</div>
        </div>
      </div>

      <!-- Task Log -->
      <div class="lg:col-span-3 space-y-4">
        <h3 class="text-zinc-500 font-bold text-[10px] uppercase tracking-widest">ACTIVE_OPERATIONS_LOG</h3>
        <div class="bg-zinc-900/30 border border-zinc-800 rounded-lg overflow-hidden">
          <table class="w-full text-left">
            <thead class="bg-black/50 text-zinc-600 text-[9px] uppercase tracking-widest">
              <tr>
                <th class="p-4 font-bold">TASK_ID</th>
                <th class="p-4 font-bold">AGENT</th>
                <th class="p-4 font-bold">COMMAND</th>
                <th class="p-4 font-bold">STATUS</th>
                <th class="p-4 font-bold">LAST_OUTPUT</th>
                <th class="p-4 font-bold"></th>
                <th class="p-4 font-bold"></th>
              </tr>
            </thead>
            <tbody id="ops-body" class="divide-y divide-zinc-800/30">
              <tr><td colspan="7" class="p-12 text-center text-zinc-700 text-xs italic">SCANNING_OPERATIONS_DB...</td></tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
